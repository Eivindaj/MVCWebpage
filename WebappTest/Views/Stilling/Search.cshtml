@using WebappTest.Controllers
@model IEnumerable<StillingModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste av stillinger:</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Stilling" asp-action="create" class="btn btn-primary">
                Legg til ny stilling
            </a>
        </div>
    </div>
    <div class="row pt-4">
        <form>
            <label ></label>
            <input class="form-control" />
            <button type="submit" class="btn btn-primary">søk</button>
        </form>
        </div>
    <br/>

<table class=" = table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Stillings navn
            </th>
            <th>
                Ansatt navn
            </th>
            <th>
                Periode
            </th>
            <th>
                Stillings Id
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="25%">
                    @obj.Stilling_navn
                </td>
                <td width="25%">
                    @obj.Ansatt_navn
                </td>
                <td width="25%">
                        @obj.Stilling_start.ToShortDateString() - @obj.Stilling_slutt.ToShortDateString()
                </td>
                <td width="25%">
                        @obj.Stilling_id
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Stilling" asp-action="Edit" asp-route-id="@obj.Stilling_id">Endre </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Stilling" asp-action="Delete" asp-route-id="@obj.Stilling_id">Slett </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>